{
  "current": {
    "theme_info": {
      "name": "BigFarma",
      "theme_version": "1.0.0",
      "theme_author": "StackBlitz",
      "theme_documentation_url": "",
      "theme_support_url": ""
    },
    "colors": [
      {
        "type": "color",
        "id": "accent_color",
        "label": "Accent Color",
        "default": "#0070f3"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text Color",
        "default": "#1a1a1a"
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background Color",
        "default": "#ffffff"
      }
    ],
    "typography": [
      {
        "type": "font_picker",
        "id": "font_heading",
        "label": "Headings",
        "default": "helvetica_n4"
      },
      {
        "type": "font_picker",
        "id": "font_body",
        "label": "Body text",
        "default": "helvetica_n4"
      }
    ],
    "header": [
      {
        "type": "checkbox",
        "id": "sticky_header",
        "label": "Sticky header",
        "default": true
      },
      {
        "type": "range",
        "id": "logo_width",
        "min": 50,
        "max": 250,
        "step": 10,
        "unit": "px",
        "label": "Logo width",
        "default": 100
      }
    ],
    "cart": [
      {
        "type": "checkbox",
        "id": "cart_notes_enable",
        "label": "Enable cart notes",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "cart_terms_conditions_enable",
        "label": "Enable terms and conditions",
        "default": false
      }
    ],
    "social_media": [
      {
        "type": "text",
        "id": "social_twitter_link",
        "label": "Twitter",
        "info": "https://twitter.com/shopify"
      },
      {
        "type": "text",
        "id": "social_facebook_link",
        "label": "Facebook",
        "info": "https://facebook.com/shopify"
      },
      {
        "type": "text",
        "id": "social_instagram_link",
        "label": "Instagram",
        "info": "https://instagram.com/shopify"
      }
    ],
    "product_grid": [
      {
        "type": "select",
        "id": "product_grid_layout",
        "label": "Grid layout",
        "options": [
          {
            "value": "2",
            "label": "2 per row"
          },
          {
            "value": "3",
            "label": "3 per row"
          },
          {
            "value": "4",
            "label": "4 per row"
          }
        ],
        "default": "3"
      },
      {
        "type": "checkbox",
        "id": "show_secondary_image",
        "label": "Show second image on hover",
        "default": true
      }
    ]
  }
}