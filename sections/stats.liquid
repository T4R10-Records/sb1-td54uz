<div class="stats">
  <div class="stats__grid">
    {% for block in section.blocks %}
      <div class="stats__item" {{ block.shopify_attributes }}>
        <div class="stats__icon">
          {% render 'icon-' | append: block.settings.icon %}
        </div>
        <div class="stats__number">{{ block.settings.number }}</div>
        <div class="stats__label">{{ block.settings.label }}</div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Statistics",
  "max_blocks": 3,
  "blocks": [
    {
      "type": "stat",
      "name": "Statistic",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            {
              "value": "satisfaction",
              "label": "Satisfaction"
            },
            {
              "value": "lab",
              "label": "Lab Test"
            },
            {
              "value": "support",
              "label": "Support"
            }
          ]
        },
        {
          "type": "text",
          "id": "number",
          "label": "Number",
          "default": "98%"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Satisfied Customers"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Statistics",
      "blocks": [
        {
          "type": "stat",
          "settings": {
            "icon": "satisfaction",
            "number": "98%",
            "label": "Satisfied Customers"
          }
        },
        {
          "type": "stat",
          "settings": {
            "icon": "lab",
            "number": "100%",
            "label": "Lab Tested Products"
          }
        },
        {
          "type": "stat",
          "settings": {
            "icon": "support",
            "number": "24/7",
            "label": "Customer Support"
          }
        }
      ]
    }
  ]
}
{% endschema %}